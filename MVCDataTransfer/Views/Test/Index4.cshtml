
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index4</title>
</head>
<body>
    <div>
        <table border="1" align="center" width="25%">
            <caption>Product Details</caption>
            <tr>
                <td>Id</td>
                <td>@HttpContext.Current.Application["Id"]</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@HttpContext.Current.Application["Name"]</td>
            </tr>
            <tr>
                <td>Price</td>
                <td>
                    @{
                        double price = Convert.ToDouble(HttpContext.Current.Application["Price"]);
                        double finalPrice = price + (price * 0.1);
                        @finalPrice;
                    }
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
