
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index4</title>
</head>
<body>
    <div>
        <table border="1" align="center" width="15%">
            <caption>Product Details</caption>

            <tr>
                <td>ID</td>
                @*<td>@ViewData["Id"]</td>*@
                <td>@TempData["Id"]</td>
            </tr>
            <tr>
                <td>Name</td>
                @*<td>@ViewData["Name"]</td>*@
                <td>@TempData["Name"]</td>
            </tr>
            <tr>
                <td>Price</td>
                <td>
                    @{
                        double price = Convert.ToDouble(TempData["Price"]);
                        double finalPrice = price + (price * 0.1);
                        @finalPrice;
                    }
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
